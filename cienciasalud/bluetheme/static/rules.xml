<?xml version="1.0" encoding="UTF-8"?>
<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo+css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

    <theme href="theme.html" css:if-content="#visual-portal-wrapper" />

    <rules css:if-content="#visual-portal-wrapper">
        <!-- Head: title -->
        <replace css:theme="/html/head/title" css:content="/html/head/title" />

        <!-- Base tag -->
        <replace css:theme="/html/head/base" css:content="/html/head/base" />
        <replace css:content-children="//*[@id="portal-top"]" css:theme-children="//*[@id="header"]" />
        <replace css:content-children="//*[@id="portal-column-two"]" css:theme-children="/html/body/div[3]/div[2]/div[2]" />
        <replace css:content-children="//*[@id="portal-column-content"]" css:theme-children="//*[@id="content"]" />
        <!-- Drop styles in the head - these are added back by including them from Plone -->

        <!-- Pull in Plone CSS -->
    </rules>

</rules>
